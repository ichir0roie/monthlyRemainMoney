<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center"
    tools:context=".FirstFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:textAlignment="center">

        <Button
            android:id="@+id/main_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="go to setup"
            android:textAlignment="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:textAlignment="center">

            <Button
                android:id="@+id/main_bt_tod"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="今日の"
                android:textAlignment="center" />

            <Button
                android:id="@+id/main_bt_tom"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="明日の"
                android:textAlignment="center" />

        </LinearLayout>

        <TextView
            android:id="@+id/main_lbl_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FF9878"
            android:text="今日の食費"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/main_tb_dinnerMonery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FF9878"
            android:text="test円"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/main_tb_pocket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#989898"
            android:text="残金"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/main_tb_pocketMoney"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#989898"
            android:text="test円"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/main_lbl_tar_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#7AD6FF"
            android:text="目標貯蓄"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/main_iplb_tar_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#7AD6FF"
            android:text="test円"
            android:textAlignment="center"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:textAlignment="center">

            <EditText
                android:id="@+id/main_et_balance"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:ems="10"
                android:hint="balance"
                android:inputType="textPersonName"
                android:textAlignment="center" />

            <Button
                android:id="@+id/main_bt_update"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="計算"
                android:textAlignment="center" />

            <Button
                android:id="@+id/main_bt_ocr"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="ocr"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:textAlignment="center">

            <Button
                android:id="@+id/main_bt_minus2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="-500"
                android:textAlignment="center" />

            <Button
                android:id="@+id/main_bt_minus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="-100"
                android:textAlignment="center" />

            <Button
                android:id="@+id/main_bt_plus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="+100"
                android:textAlignment="center" />

            <Button
                android:id="@+id/main_bt_plus2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="+500"
                android:textAlignment="center" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>